{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "frontend/app/**/*",
    "frontend/srcs/**/*",
    "frontend/**/*.ts",
    "frontend/**/*.tsx"
  ],
  "exclude": ["node_modules", "**/node_modules", "dist", "build", ".next", "frontend/.next"]
}
