generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) // Unikátní ID
  email     String   @unique              // Email
  password  String                        // Heslo
  createdAt DateTime @default(now())      // Datum vytvoření
  updatedAt DateTime @updatedAt           // Datum změny
}
